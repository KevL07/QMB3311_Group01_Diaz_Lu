def present_value(cash_flow,discount_rate,years):
    value = cash_flow / (1 + discount_rate) ** years
    return round(value,2)
print(present_value())


def future_value(cash_flow,discount_rate,years):
    value = cash_flow * (1 + discount_rate) ** years
    return round(value,2)
print(future_value())

        
def total_revenue(units,price):
    revenue = units * price
    return revenue
print(total_revenue())


def total_cost(units,fixed_cost,x):
    x = units ** 2
    cost = x * (units ** 2) + fixed_cost
    return cost
print(total_cost())

